<div class="container" id="top">
  <img src="assets/img/bubble-burger.png">
  <h1>Eat-Da-Burger!</h1>
</div>
<br>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="row panel-row">
        <!-- Panel 1: Burgers Not Eaten. -->
        <div class="col-md-6" id="not-eaten">
          <table class="table">
            <thead>
              <tr>
                <th>Not Eaten Yet</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                {{#each burgers}} {{#unless notEaten}} {{> burgers/burger-block devoured=false}} {{/unless}} {{/each}}
              </tr>
            </tbody>
          </table>

        </div>
        <!-- Panel 2: Burgers Eaten. -->
        <div class="col-md-6" id="eaten">
          <table class="table">
            <thead>
              <tr>
                <th>Already Eaten</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                {{#each burgers}} {{#if eaten}} {{> burgers/burger-block devoured=true}} {{/if}} {{/each}}
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<hr>

<div class="container" id="form">
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Add a New Burger:</label>
      <br>
      <input type="text" id="ca" name="name">
      <br>
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>