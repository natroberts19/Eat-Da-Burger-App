<div class="container" id="top">
<img src="assets/img/bubble-burger.png">
<h1>Eat-Da-Burger!</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="row panel-row">
<!-- Panel 1: Burgers Not Eaten. -->
        <div class="col-md-6" id="not-eaten">
          <h3>Not Eaten Yet!</h3>
            <ul>
              {{#each burgers}}
                {{#unless notEaten}}
                  {{> burgers/burger-block devoured=false}}
                {{/unless}}
              {{/each}}
            </ul>
        </div>
<!-- Panel 2: Burgers Eaten. -->
            <div class="col-md-6" id="eaten">
              <h3>Already Eaten!</h3>
                <ul>
                  {{#each burgers}}
                    {{#if eaten}}
                      {{> burgers/burger-block devoured=true}}
                    {{/if}}
                  {{/each}}
                </ul>
            </div>
          </div>
        </div>
    </div>
</div>
<br>
<hr>

<div class="container" id="form">
<form class="create-form">

  <div class="form-group">
    <label for="ca">Add a New Burger:</label><br>
    <input type="text" id="ca" name="name"><br>
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>
</div>

